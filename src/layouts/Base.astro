---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = 'Building and thinking about generative systems, AI agents, and sovereign infrastructure.',
  ogImage,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const pageTitle = title === 'Home' ? 'Jordan Lyall' : `${title} â€” Jordan Lyall`;
const ogImageUrl = ogImage || new URL(
  `/api/og?title=${encodeURIComponent(pageTitle)}&subtitle=${encodeURIComponent(description)}`,
  Astro.site
).toString();

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/writing/', label: 'Writing' },
  { href: '/projects/', label: 'Projects' },
  { href: '/now/', label: 'Now' },
  { href: '/work-with-me/', label: 'Work with me' },
];

const currentPath = Astro.url.pathname;
