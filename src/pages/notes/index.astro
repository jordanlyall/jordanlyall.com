---
import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';

const topicLabels: Record<string, string> = {
  'generative-art': 'Generative Art & Digital Culture',
  'ai-agents': 'AI Agents & Infrastructure',
  'sovereign-systems': 'Sovereign Systems',
};

const notes = (await getCollection('notes', ({ data }) => !data.draft))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<Base title="Notes" description="Short observations, research snippets, and experiment logs.">
  <div class="page-header">
    <h1>Notes</h1>
    <p>Short observations, research snippets, and experiment logs.</p>
  </div>

  {notes.length > 0 ? (
    <div class="section">
      <ul class="card-list">
        {notes.map((note) => (
          <li class="card-list-item">
            <a href={`/notes/${note.id}/`}>{note.data.title}</a>
            <div class="card-meta">
              <span>{note.data.publishDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
              <a href={`/topics/${note.data.topic}/`} class="tag">{topicLabels[note.data.topic] || note.data.topic}</a>
            </div>
            <p class="card-summary">{note.data.summary}</p>
          </li>
        ))}
      </ul>
    </div>
  ) : (
    <div class="empty-state">
      <p>No notes yet. Check back soon.</p>
    </div>
  )}
</Base>
