---
import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';

const topicLabels: Record<string, string> = {
  'generative-art': 'Generative Art & Digital Culture',
  'ai-agents': 'AI Agents & Infrastructure',
  'sovereign-systems': 'Sovereign Systems',
};

const essays = (await getCollection('essays', ({ data }) => !data.draft))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<Base title="Essays" description="Longer explorations -- models, frameworks, and ideas worth developing.">
  <div class="page-header">
    <h1>Essays</h1>
    <p>Longer explorations -- models, frameworks, and ideas worth developing.</p>
  </div>

  {essays.length > 0 ? (
    <div class="section">
      <ul class="card-list">
        {essays.map((essay) => (
          <li class="card-list-item">
            <a href={`/essays/${essay.id}/`}>{essay.data.title}</a>
            <div class="card-meta">
              <span>{essay.data.publishDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
              <a href={`/topics/${essay.data.topic}/`} class="tag">{topicLabels[essay.data.topic] || essay.data.topic}</a>
            </div>
            <p class="card-summary">{essay.data.summary}</p>
          </li>
        ))}
      </ul>
    </div>
  ) : (
    <div class="empty-state">
      <p>No essays yet. Check back soon.</p>
    </div>
  )}
</Base>
