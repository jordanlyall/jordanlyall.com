---
import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';

const topicLabels: Record<string, string> = {
  'generative-art': 'Generative Art & Digital Culture',
  'ai-agents': 'AI Agents & Infrastructure',
  'sovereign-systems': 'Sovereign Systems',
};

const notes = (await getCollection('notes', ({ data }) => !data.draft))
  .map((n) => ({ ...n, type: 'note' as const }));
const essays = (await getCollection('essays', ({ data }) => !data.draft))
  .map((e) => ({ ...e, type: 'essay' as const }));

const allPosts = [...notes, ...essays]
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<Base title="Writing" description="Notes, essays, and explorations on generative art, AI agents, and sovereign systems.">
  <div class="page-header">
    <h1>Writing</h1>
    <p>
      All posts. Also available as
      <a href="/notes/" class="inline-link">notes</a> and
      <a href="/essays/" class="inline-link">essays</a>.
    </p>
  </div>

  {allPosts.length > 0 ? (
    <div class="section">
      <ul class="card-list">
        {allPosts.map((post) => (
          <li class="card-list-item">
            <a href={`/${post.type === 'note' ? 'notes' : 'essays'}/${post.id}/`}>
              {post.data.title}
            </a>
            <div class="card-meta">
              <span>{post.data.publishDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}</span>
              <span>{post.type}</span>
              <a href={`/topics/${post.data.topic}/`} class="tag">{topicLabels[post.data.topic] || post.data.topic}</a>
            </div>
            <p class="card-summary">{post.data.summary}</p>
          </li>
        ))}
      </ul>
    </div>
  ) : (
    <div class="empty-state">
      <p>No posts yet. Check back soon.</p>
    </div>
  )}
</Base>
